{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'renderer_cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=renderer_cli",
                    "--package=renderer_cli"
                ],
                "filter": {
                    "name": "renderer_cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "(Windows) Debug executable",
            "program": "${workspaceRoot}/target/debug/renderer_cli.exe",
            "stopAtEntry": false,
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "cargo build (debug)",
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'renderer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                ],
                "filter": {
                    "name": "renderer",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/renderer/"
        }
    ]
}